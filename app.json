{
  "expo": {
    "name": "FibraOpticaApp",
    "slug": "FibraOpticaApp",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo3.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/logo3.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "jsEngine": "hermes",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app necesita acceso a la cámara para tomar fotos de instalaciones de fibra óptica",
        "NSMicrophoneUsageDescription": "Esta app necesita acceso al micrófono para grabar video"
      },
      "bundleIdentifier": "com.yourcompany.fibraopticaapp"
    },
    "android": {
      "enableDexingArtifactTransform": false,
      "proguard": {
        "enabled": true,
        "rules": "./proguard-rules.pro"
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo3.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan",
      "abiFilters": [
        "armeabi-v7a",
        "arm64-v8a"
      ],
      "enableDangerousExperimentalLeanBuilds": true,
      "jsEngine": "hermes",
      "ndk": "arm64-v8a, armeabi-v7a",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.yourcompany.fibraopticaapp",
      "versionCode": 13
    },
    "androidStatusBar": {
      "translucent": true,
      "backgroundColor": "#00000000"
    },
    "androidNavigationBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#00000000"
    },
    "web": {
      "favicon": "./assets/images/logo3.png",
      "bundler": "metro"
    },
    "assetBundlePatterns": [
      "assets/images/*",
      "assets/fonts/*"
    ],
    "plugins": [
      "expo-font",
      "expo-asset",
      "expo-camera",
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "extraProguardRules": "-keep class com.facebook.hermes.unicode.** { *; }",
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "reactNativeArchitectures": [
              "armeabi-v7a",
              "arm64-v8a"
            ]
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-barcode-scanner"
    ],
    "extra": {
      "eas": {
        "projectId": "b18ede45-96ef-4cb0-847a-68e5e0d0a591"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "react-native": {
      "hermesEnabled": true
    }
  }
}
